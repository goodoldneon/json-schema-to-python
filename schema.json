{
  "id": "#root",
  "type": "object",
  "properties": {
    "Person": {
      "id": "#Person",
      "type": "object",
      "properties": {
        "first_name": {
          "type": "string"
        },
        "last_name": {
          "type": "string"
        },
        "age": {
          "type": "integer"
        },
        "vehicle": {
          "anyOf": [
            {
              "$ref": "#Bike"
            },
            {
              "$ref": "#Car"
            }
          ]
        }
      },
      "required": ["first_name", "vehicle"]
    },
    "Bike": {
      "id": "#Bike",
      "type": "object",
      "properties": {
        "frame": {
          "type": "string"
        }
      },
      "required": ["frame"]
    },
    "Car": {
      "id": "#Car",
      "type": "object",
      "properties": {
        "color": {
          "type": "string"
        }
      },
      "required": ["color"]
    }
  }
}
